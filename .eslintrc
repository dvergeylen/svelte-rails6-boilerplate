{
  "env": {
    "browser": true,
    "node": true
  },
  "extends": "airbnb-base",
  "rules": {
    "consistent-return": "off",
    "no-param-reassign": "off",
    "no-use-before-define": [
      "error",
      {
        "functions": false
      }
    ],
    "no-underscore-dangle": [
      "error",
      {
        "allow": [
          "_id"
        ],
        "allowAfterThis": true
      }
    ],
    "promise/no-native": "error",
    "promise/always-return": "error"
  },
  "plugins": [
    "promise",
    "import"
  ]
}
